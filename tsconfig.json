{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/strictest/tsconfig.json", "@tsconfig/next/tsconfig"],
  "compilerOptions": {
    "baseUrl": "./",
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["./src/**/*", "./*.*js", "./*.*ts", ".next/types/**/*.ts"],
  "exclude": ["**/node_modules/**/*"]
}
